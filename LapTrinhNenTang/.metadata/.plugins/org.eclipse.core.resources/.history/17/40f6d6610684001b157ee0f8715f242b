import java.util.Scanner;

public class XuLy {

	public XuLy() {
		// TODO Auto-generated constructor stub
	}
	
	public static int tinhTien(int quangDuongDauTien, int giaTienDauTien, int quangDuongThem, int giaTienThem, int tongDuongDi) {
		int tongTien = 0;
		if(tongDuongDi < quangDuongDauTien) {
			tongTien = giaTienDauTien;
		} else {
			tongTien = ((tongDuongDi - quangDuongDauTien)/quangDuongThem + 1)*giaTienThem;
		}
		return tongTien;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
	}

}
